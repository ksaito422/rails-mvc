<h2><%= @article.title %></h2>
<div>
  <p><%= @article.user.name %></p>
  <p><%= @article.content %></p>
  <% if logged_in? && @article.user_id == @current_user.id %>
    <%= link_to '削除する', "/articles/#{@article.id}", method: :delete %>
    <%= link_to '編集する', "/articles/#{@article.id}/edit" if session[:user_id] == @article.user_id %>
  <% end %>
</div>

